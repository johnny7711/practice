<!DOCTYPE html>
<html ng-app="myApp">
  <head>
    <meta charset="utf-8">
    <title></title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.1/angular.min.js"></script>
    <script src="/public/angular.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  </head>
  <body ng-controller='myController'>

    <table class="table">
      <tr>
        <th>ISBN</th><th> books</th><th> price</th><th> published</th>
        <th> date</th>
      </tr>
      <tr ng-repeat="book in books">
        <td>{{book.isbn}}</td>
        <td>{{book.title}}</td>
        <td>{{book.price}}</td>
        <td>{{book.publish}}</td>
        <td>{{book.published | date: 'yyyy/mm/dd'}}</td>
        <td><button ng-click="onedit(book.isbn)">Edit</button> </td>
        <td><button  ng-click="ondel(book.isbn)">Del</button> </td>
      </tr>
    </table>
    <form novalidate>
      <label for="isbn">ISBN Code: </label>
      <input type="text" name="isbn" id="isbn" ng-model='isbn'><br>
      <label for="title">Title: </label>
      <input type="text" name="title" id="title" ng-model="title"><br>
      <label for="price">Price: </label>
      <input type="text" name="price" id="price" ng-model="price"><br>
      <label for="publish">Publish: </label>
      <input type="text" name="published" id="publish" ng-model="publish"><br>
      <button ng-click='onregi()'>Register</button>
       <button ng-click='onmodi()'>Modify</button>
    </form>
  </body>
</html>
